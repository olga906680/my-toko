{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-ulogin" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                 {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
                {{ text_module_description }}
            </div>
        </div>
        {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-ulogin" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                            {% if error_name %}
                            <div class="text-danger">{{ error_name }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-uloginid">{{ entry_uloginid }}</label>
                        <div class="col-sm-10">
                            <input
                                    type="text"
                                    name="uloginid"

                                    value="{% if uloginid %}uloginid{% endif %}"
                                    placeholder="{{ entry_uloginid_pl }}"
                                    id="input-uloginid"
                                    class="form-control"
                                    maxlength="8"
                                    />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-type">{{ entry_type }}</label>
                        <div class="col-sm-10">
                            <select name="type" id="input-type" class="form-control">
                                {% if type == 'online' %}
                                    <option value="offline">{{ text_type_offline }}</option>
                                    <option value="online" selected="selected">{{ text_type_online }}</option>
                                    <option value="online_edit">{{ text_type_online_edit_page }}</option>
                                {% elseif type == 'offline' %}
                                    <option value="offline" selected="selected">{{ text_type_offline }}</option>
                                    <option value="online">{{ text_type_online }}</option>
                                    <option value="online_edit">{{ text_type_online_edit_page }}</option>
                                {% elseif type == 'online_edit' %}
                                    <option value="offline">{{ text_type_offline }}</option>
                                    <option value="online">{{ text_type_online }}</option>
                                    <option value="online_edit" selected="selected">{{ text_type_online_edit_page }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="status" id="input-status" class="form-control">
                                {% if status %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                               {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}